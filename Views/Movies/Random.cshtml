@model VidlyProject.ViewModels.RandomMovieViewModel

@*
    This is a comment
*@

@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    string className = Model.Customers.Count > 0 ? "Popular" : null;
}

<h2 class="@className">@Model.Movie.Name</h2>


@if (Model.Customers.Count == 0)
{
    <text>No one has rented this movie before.</text>
}
else
{
    <ul>
        @foreach (VidlyProject.Models.Customer customer in Model.Customers)
        {
            <li>@customer.Name</li>
        }
    </ul>
}
