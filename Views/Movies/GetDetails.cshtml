@model VidlyProject.Models.Movie
@{
    ViewBag.Title = "GetDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>
<h2>@Model.Name</h2>
<ul>
    <li>@Html.DisplayNameFor(c => c.Genre) : @Html.DisplayFor(c => c.Genre.Name)</li>
    <li>@Html.DisplayNameFor(c => c.ReleaseDate) : @Model.ReleaseDate.ToLongDateString()</li>
    <li>@Html.DisplayNameFor(c => c.DateAdded) : @Model.DateAdded.ToLongDateString()</li>
    <li>@Html.DisplayNameFor(c => c.NumberInStock) : @Html.DisplayFor(c => c.NumberInStock)</li>
</ul>

